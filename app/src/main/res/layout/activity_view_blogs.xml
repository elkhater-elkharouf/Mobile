<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <!-- RecyclerView pour afficher la liste des blogs -->

    <TextView
        android:id="@+id/title_app"
        android:layout_width="463dp"
        android:layout_height="91dp"
        android:background="#2C7873"
        android:text="          Reclamations"
        android:textColor="#000000"
        android:fontFamily="@font/dancing_bold"
        android:textSize="42sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/addButtonview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#2C7873"
        android:text="Create your Reclamation"
        android:textColor="@color/black"
        tools:ignore="MissingConstraints" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewBlogs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

</LinearLayout>
